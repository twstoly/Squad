{{#partial "content"}}
    <div class="container">
        <div class="row">
            <h5><b>Add new heroes and squads</b></h5>
            <div class="accordion col-md-6" id="accordionPanelsStayOpenExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                        <button id="squadButton" class="accordion-button collapsed " type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                            <i class="fas fa-user-plus"></i> Add Hero's Name
                        </button>
                    </h2>

                    <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingThree">
                        <div class="accordion-body">
                            <form action="/hero/new" method="post">
                                <div class="form-row ">
                                    <div class="form-group ">
                                        <label for="name">Name</label>
                                        <input type="text" required class="form-control" name="name" id="name" placeholder="Name">
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label for="age">Age</label>
                                        <input type="text" required class="form-control" name="age" id="age" placeholder="age">
                                    </div>
                                </div>
                                <br>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="power">Select power</label>
                                        <select class="form-control" id="power" name="power">
                                            <option>Reality warping</option>
                                            <option>Telekinesis</option>
                                            <option>Time manipulation</option>
                                            <option>Enhanced intelligence</option>
                                            <option>Dimensional travel</option>
                                        </select>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label for="weakness">Select power</label>
                                        <select class="form-control" id="weakness" name="weakness">
                                            <option>Blindfolds</option>
                                            <option>Passengers</option>
                                            <option>Men</option>
                                            <option>Battery Life</option>
                                            <option>Nature</option>
                                            <option>Subconscious Guilt</option>
                                        </select>
                                    </div>
                                </div>
                                <br>
                                <p>Add Squad Name</p>
                                <div class="form-row ">
                                    <div class="form-group">
                                        <label for="squad">SquadName</label>
                                        <input type="text" class="form-control" name="squad" id="squad" placeholder="Squad">
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label for="size">Size</label>
                                        <input type="number" class="form-control" name="size" id="size" placeholder="Size">
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label for="task">Mission</label>
                                        <input type="text" class="form-control" name="task" id="task" placeholder="Task">
                                    </div>
                                </div>
                                <br>
                                <button type="submit" class="btn btn-dark">Submit</button>
                                <br>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

